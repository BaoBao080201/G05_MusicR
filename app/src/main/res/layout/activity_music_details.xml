<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backgound"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/custum_button"
            android:orientation="vertical"
            android:padding="16dp">
            <ImageView
                android:id="@+id/imageSong"
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:background="@color/backgound2"
                app:srcCompat="@drawable/loading_image" />

            <TextView
                android:id="@+id/namesong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"

                android:textSize="16sp"
                android:layout_weight="1.5"
                android:text="Lạ lùng" />

            <TextView
                android:id="@+id/singer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"

                android:textSize="14sp"
                android:layout_weight="1.5"
                android:text="Vũ" />

            <TextView
                android:id="@+id/text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"

                android:textSize="14sp"
                android:layout_weight="1.5"
                android:text="@string/view" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="5"
                    android:stepSize="0.01" />

                <TextView
                    android:id="@+id/rating_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/rating_number"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/lyrics_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/music_icon"
                    app:tint="@color/green_milk"
                    />

                <ImageView
                    android:id="@+id/recommend_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/mdi_music_box_multiple"
                    app:tint="@color/green_milk"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:orientation="vertical">
                <ScrollView
                    android:id="@+id/ScrollView"

                    android:layout_width="match_parent"
                    android:layout_height="397dp"
                    android:background="@color/backgound"
                    android:paddingBottom="20dp"
                    tools:ignore="SpeakableTextPresentCheck">

                    <TextView
                        android:id="@+id/lyrics_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"

                        android:layout_marginTop="2dp"

                        android:layout_weight="1"
                        android:fontFamily="@font/cabin"
                        android:lineSpacingExtra="12sp"
                        android:text="@string/lyrics"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        tools:layout_editor_absoluteX="16dp" />
                </ScrollView>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
